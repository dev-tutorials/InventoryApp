<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hannabotar.inventoryapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InventoryActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".ProductsActivity" />
        <activity
            android:name=".ItemEditorActivity"
            android:parentActivityName=".InventoryActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".InventoryActivity" />
        </activity>

        <provider
            android:name=".data.ItemProvider"
            android:authorities="ro.urgentcargus.items"
            android:exported="false" />

        <service
            android:name=".services.GetItemsService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".ProductEditorActivity"></activity>
    </application>

</manifest>